<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.splashscreen.SplashscrennActivity">
    <ImageView
            android:layout_above="@+id/appname"
            android:id="@+id/image_view_login"
            android:layout_width="@dimen/very_huge_margin"
            android:layout_height="@dimen/very_huge_margin"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="@drawable/bg_shape_rectangle_white_login"
            android:padding="5dp"
            android:src="@mipmap/ic_launcer_rounded"/>
    <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="@string/app_name"
            android:textSize="@dimen/very_huge_font_size"
            android:layout_centerVertical="true"
            android:textColor="@color/md_blue_500"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_margin"/>

    <com.agrawalsuneet.dotsloader.loaders.TashieLoader
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_below="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tashieloader_animDelay="200"
            app:tashieloader_animDur="1000"
            app:tashieloader_dotsColor="@color/md_blue_500"
            app:tashieloader_dotsDist="7dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/splash_activity"
            app:tashieloader_dotsRadius="10dp"
            app:tashieloader_interpolator="@android:anim/accelerate_interpolator"
            app:tashieloader_noOfDots="6" />

</RelativeLayout>